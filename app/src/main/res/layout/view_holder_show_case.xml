<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/width_showcase"
    android:layout_height="@dimen/height_showcase"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/margin_medium_2">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivShowcaseImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/placeholder_wolverine_image"
        android:scaleType="centerCrop"/>

    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/colorAccent"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
        app:icon="@drawable/baseline_play_arrow_black_24"
        android:layout_centerInParent="true"
        app:cornerRadius="@dimen/margin_large"
        android:layout_width="@dimen/margin_xxlarge"
        android:layout_height="@dimen/margin_xxlarge"
        android:layout_marginBottom="@dimen/margin_xxlarge"
        android:elevation="@dimen/margin_medium"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowcaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18 Dec 2023"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_medium_2"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:textColor="@color/colorSecondaryText"
        android:textStyle="bold"
        android:elevation="@dimen/margin_medium"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvShowcaseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvShowcaseDate"
        android:layout_marginBottom="@dimen/margin_small"
        android:text="Passenger"
        android:layout_alignStart="@id/tvShowcaseDate"
        android:textSize="@dimen/text_regular_2x"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:elevation="@dimen/margin_medium"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/margin_small"
        android:background="@color/colorTransparentOverlay"/>



</RelativeLayout>